<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="cc.biglong.bigandroid.MainActivity">

    <cc.biglong.bigandroid.widget.CircleProgress
        android:id="@+id/circleProgress1"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginRight="32dp"
        android:layout_marginTop="32dp"
        app:center_text="ABCD"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginEnd="32dp"/>

    <cc.biglong.bigandroid.widget.CircleProgress
        android:id="@+id/circleProgress2"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginLeft="32dp"
        android:layout_marginTop="32dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="32dp"/>

    <TextView
        android:text="进度(0~100):"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="13dp"
        app:layout_constraintBottom_toTopOf="@+id/seekBar1"
        android:layout_marginLeft="32dp"
        app:layout_constraintLeft_toLeftOf="parent"/>
    <SeekBar
        android:id="@+id/seekBar1"
        android:max="100"
        android:layout_width="330dp"
        android:layout_height="19dp"
        android:layout_marginTop="163dp"
        app:layout_constraintTop_toBottomOf="@+id/circleProgress2"
        android:layout_marginLeft="32dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="32dp"
        app:layout_constraintRight_toRightOf="parent"/>

    <TextView
        android:text="厚度(0~50):"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="13dp"
        app:layout_constraintBottom_toTopOf="@+id/seekBar2"
        android:layout_marginLeft="32dp"
        app:layout_constraintLeft_toLeftOf="parent"/>
    <SeekBar
        android:id="@+id/seekBar2"
        android:max="50"
        android:layout_width="332dp"
        android:layout_height="19dp"
        android:layout_marginTop="64dp"
        app:layout_constraintTop_toBottomOf="@+id/circleProgress2"
        android:layout_marginLeft="32dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="32dp"
        app:layout_constraintRight_toRightOf="parent"/>

</android.support.constraint.ConstraintLayout>
