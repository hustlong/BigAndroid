<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <cc.biglong.bigandroid.widget.SlideVerticalBar
        android:id="@+id/slideBar"
        app:slide_vertical_bar_checkedColor="#00dddd"
        app:slide_vertical_bar_uncheckedColor="#00aaaa"
        app:slide_vertical_bar_radius="24dp"
        android:layout_centerInParent="true"
        android:layout_width="88dp"
        android:layout_height="240dp"/>

    <cc.biglong.bigandroid.widget.DimmerIndicator
        android:id="@+id/indicator"
        app:dimmer_color="#00dddd"
        app:dimmer_color_dark="#119999"
        app:dimmer_thickness="2dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="24dp"
        android:layout_width="56dp"
        android:layout_height="56dp"/>

    <TextView
        android:id="@+id/text"
        android:layout_margin="16dp"
        android:layout_centerVertical="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <SeekBar
        android:id="@+id/seekBar1"
        android:max="20"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <SeekBar
        android:id="@+id/seekBar2"
        android:max="150"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

</RelativeLayout>